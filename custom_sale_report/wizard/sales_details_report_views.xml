<odoo>
    <record id="sales_details_report_form" model="ir.ui.view">
        <field name="name">sale.details.report.form</field>
        <field name="model">sales.details.report</field>
        <field name="arch" type="xml">
            <form string="Sales Details Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="partner_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
                        
                    </group>
                    <group>
                        <field name="date_to"/>
                        
                        <field name="company_id" options="{'no_create_edit': True, 'no_quick_create': True}" readonly="0"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_report" string="Download Excel" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" type="object" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_details_report" model="ir.actions.act_window">
        <field name="name">Sales Details Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sales.details.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="custom_sale_report.sales_details_report_form"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Sales Details Report"
              id="menu_sales_details_report"
              parent="sale.menu_sale_report"
              action="action_sales_details_report"
              sequence="50"/>

</odoo>
