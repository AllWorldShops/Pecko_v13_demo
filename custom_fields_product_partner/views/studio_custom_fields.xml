                </xpath>
            </field>
        </record>
        <record id="inherit_product_supplierinfo_tree_edit_uom" model="ir.ui.view">
            <field name="name">product.supplierinfo.tree.edit.uom</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='product_uom']" position="attributes">
                    <attribute name="readonly">0</attribute>
