<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_form_view_inherited" model="ir.ui.view">
            <field name="name">account.move.form.view.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="picking_id" invisible="1"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/list/field[@name='product_id']" position="before">
                    <field name="position_no"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>