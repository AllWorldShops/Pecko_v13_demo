<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_picking_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.inherit.search</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//list//field[@name='product_id']" position="before">
                <field name="position_no" readonly="1"/>
            </xpath>
            <xpath expr="//list//field[@name='lot_name']" position="before">
                <field name="part_no" string="Customer / Manufacturer Part Number"/>
                <field name="location_id"/>
                <field name="package_id"/>
                <field name="result_package_id"/>
                <field name="owner_id"/>
                <field name="lot_id"/>
                <field name="product_uom_qty"/>
                <field name="product_uom_id" readonly="1"/>
<!--				commented by gowtham-->
<!--									<field name="reserved_uom_qty" readonly="1"/>-->
                <field name="qty_done"/>

            </xpath>


        </field>
    </record>



     <record id="inherit_stock_backorder_confirmation" model="ir.ui.view">
            <field name="name">stock.backorder.confirmation.inherit</field>
            <field name="model">stock.backorder.confirmation</field>
            <field name="inherit_id" ref="stock.view_backorder_confirmation"/>
            <field name="arch" type="xml">
                <!-- Hide the "No Backorder" button -->
                <xpath expr="//button[@name='process_cancel_backorder']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>


    <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
