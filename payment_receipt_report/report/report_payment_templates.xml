<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account.report_payment_receipt_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>
            <div class="page">
                <h3><strong><span t-field="o.payment_receipt_title">Payment Receipt</span>: <span t-field="o.name">INV0001</span></strong></h3>
                <div class="mb-4 mt-3">
                    <div name="date" class="row">
                        <div class="col-6" t-if="o.date">
                            Payment Date: <span t-field="o.date">2023-01-01</span>
                        </div>
                    </div>
                    <div class="oe_structure"></div>
                    <div class="row">
                        <div class="col-6" t-if="o.partner_type">
                            <t t-if="o.partner_type == 'customer'">
                                Customer:
                            </t>
                            <t t-else="o.partner_type == 'supplier'">
                                Vendor:
                            </t><span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                        </div>
                        <div name="payment_method"
                             t-if="values['display_payment_method'] and o.payment_method_id"
                             class="col-6">
                            Payment Method: <span t-field="o.payment_method_id.name">Credit card</span>
                        </div>
                    </div>
                    <div class="oe_structure"></div>
                    <div class="row">
                        <div class="col-6" t-if="o.amount">
                            Payment Amount: <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">50 USD</span>
                         </div>
                        <div class="col-6" t-if="o.memo">
                            Memo: <span t-field="o.memo">Sample Memo</span>
                         </div>
                    </div>
                </div>
                <div class="oe_structure"></div>
                <table name="invoices"
                       t-if="values['display_invoices']"
                       class="table table-sm"
                       style="border-collapse: collapse; width: 100%; text-align: left; font-size: 14px;">
                    <t t-set="invoices" t-value="o.reconciled_invoice_ids or o.reconciled_bill_ids"/>
                    <!-- Check if invoices include different currencies -->
                    <t t-foreach="invoices" t-as="inv">
                        <t t-if="any(inv.currency_id != par[2].currency_id for par in inv._get_reconciled_invoices_partials()[0])" t-set="otherCurrency" t-value="True"/>
                    </t>
                    <thead>
                        <tr style="background-color: #F8F8F8; border: 1px solid black;border-bottom:2px solid #7B8186;">
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>INVOICE DATE</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>INVOICE NUMBER</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>REFERENCE</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>ORIGINAL AMOUNT</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>CREDIT NOTE/REFUND</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>AMOUNT</span></th>
                            <th style="text-align: center; font-weight: bold; padding: 8px; border: 1px solid black;"><span>BALANCE</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="i" t-value="0"/>
                        <t t-set="j" t-value="0"/>
                        <t t-set="k" t-value="0"/>
                        <t t-set="r" t-value="0"/>
                        <t t-foreach="invoices" t-as="inv">
                            <t t-set="credit_refund" t-value="0"/>
                            <t t-foreach="inv._get_reconciled_invoices_partials()[0]" t-as="par">
                                <t t-set="payment" t-value="par[2].move_id"/>
                                <t t-set="amountPayment" t-value="-payment.amount_total"/>
                                <t t-if="payment.move_type in ('out_refund', 'in_refund')">
                                    <t t-set="credit_refund" t-value="credit_refund + (par[1])"/>
                                </t>
                            </t>
                            <!-- MOVE -->
                            <t t-if="inv.move_type != 'entry'">
                                <tr style="border: 1px solid black;">
                                    <td style="padding: 8px; border: 1px solid black;"><span t-field="inv.invoice_date">2023-01-01</span></td>
                                    <td style="padding: 8px; border: 1px solid black;"><span t-field="inv.name">INV001</span></td>
                                    <td style="padding: 8px; border: 1px solid black;"><span t-field="inv.ref" data-oe-demo="Sample Ref"/></td>
                                    <!--Original Amount-->
                                    <td style="padding: 8px; text-align: right; border: 1px solid black;">
                                        <span t-field="inv.amount_total"/>
                                        <span t-set="i" t-value="i+inv.amount_total"/><span>
                                        </span>
                                    </td>
                                    <!--Credit note-->
                                    <td style="padding: 8px; text-align: right; border: 1px solid black;">
                                        <span t-esc="credit_refund"
                                              t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/>
                                        <span t-set="r" t-value="r+credit_refund"/>
                                    </td>

                                    <!--Amount-->
                                    <td style="padding: 8px; text-align: right; border: 1px solid black;">
                                        <span t-esc="(inv.amount_total-inv.amount_residual) - credit_refund" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/>
                                        <span t-set="j" t-value="j+(inv.amount_total-inv.amount_residual) - credit_refund"/>
                                    </td>
                                    <!--Balance-->
                                    <td style="padding: 8px; text-align: right; border: 1px solid black;">
                                        <span t-field="inv.amount_residual"/>
                                        <span t-set="k" t-value="k+inv.amount_residual"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                    <tr style="border-top: 2px solid #7B8186; font-weight: bold;">
                        <td colspan="3" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <strong>Total:</strong>
                        </td>
                        <td t-if="o.currency_id.position == 'after'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <strong>
                                <span t-esc="i" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                            <span t-esc="o.currency_id.symbol"/>
                        </td>
                        <td t-if="o.currency_id.position == 'after'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <strong>
                                <span t-esc="r" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                            <span t-esc="o.currency_id.symbol"/>
                        </td>
                        <td t-if="o.currency_id.position == 'after'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <strong>
                                <span t-esc="j" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                            <span t-esc="o.currency_id.symbol"/>
                        </td>
                        <td t-if="o.currency_id.position == 'after'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <strong>
                                <span t-esc="k" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                            <span t-esc="o.currency_id.symbol"/>
                        </td>

                        <td t-if="o.currency_id.position == 'before'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <span t-esc="o.currency_id.symbol"/>
                            <strong>
                                <span t-esc="i" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                        </td>
                        <td t-if="o.currency_id.position == 'before'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <span t-esc="o.currency_id.symbol"/>
                            <strong>
                                <span t-esc="r" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                        </td>
                        <td t-if="o.currency_id.position == 'before'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <span t-esc="o.currency_id.symbol"/>
                            <strong>
                                <span t-esc="j" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                        </td>
                        <td t-if="o.currency_id.position == 'before'" style="text-align: right; padding: 8px; border: 1px solid black;">
                            <span t-esc="o.currency_id.symbol"/>
                            <strong>
                                <span t-esc="k" t-options='{"widget": "float", "precision": 2}'/>
                            </strong>
                        </td>

                    </tr>
                </table>
            </div>
            <div class="oe_structure"></div>
        </t>
    </template>

    <template id="report_payment_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                <t t-call="account.report_payment_receipt_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
