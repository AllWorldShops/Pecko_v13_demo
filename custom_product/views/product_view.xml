    <record id="inherit_approval_product_line_tree_view" model="ir.ui.view">
        <field name="name">approval.product.line.tree.inherit</field>
        <field name="model">approval.product.line</field>
        <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>
        <field name="arch" type="xml">
            <!-- Update the label of product_id -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="string">Pecko Part Number</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="part_number"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="currency_id"/>
                <field name="unit_price"/>
                <field name="subtotal"/>
            </xpath>
        </field>
    </record>

    <record id="view_approval_request_form_inherit_total" model="ir.ui.view">
        <field name="name">approval.request.form.inherit.total</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_line_ids']" position="after">
                <div class="oe_button_box" name="total_box" style="text-align: right; padding-top: 15px;">
                    <label for="total_amount" string="Total : "
                           style="font-weight: bold; font-size: 16px; margin-right: 10px;"/>
                    <field name="total_amount" readonly="1"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_view_fieldaddition" model="ir.ui.view">
        <field name="name">Product pricelist inherited</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='item_ids']/list/field[@name='name']" position="after">
                <field name="customer_part_number"/>
            </xpath>

        </field>
    </record>


