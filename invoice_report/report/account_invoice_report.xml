<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_invoice_external_layout_background">
            <div class="header o_background_header" style="border-bottom: 1px solid #ccc; padding-bottom: 5px;">
                <div class="row">
                    <div class="col-10">
                        <div class="mb-2 text-left" style="text-align: left;">
                            <div>
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                     alt="Logo" style="height: 40px; display: block; margin-bottom: 5px;"/>
                            </div>
                            <div>
                                <strong style="font-size: 24px; font-family: 'Pelitaf'; color: #474F57; font-weight: bold;">
                                    <span t-field="company.partner_id.name"/>
                                </strong>

                            </div>
                        </div>

                        <div class="company_address"
                             style="font-size: 10px; font-family: 'Pelitaf'; color: #474F57; line-height: 1.3;">
                            <t t-if="o.company_id.ttx_registration_number">
                                <div>
                                    TIN NO:
                                    <span t-field="o.company_id.ttx_registration_number"/>
                                </div>
                            </t>
                            <t t-if="o.company_id.street">
                                <div>
                                    <span t-field="o.company_id.street"/>
                                </div>
                            </t>
                            <t t-if="o.company_id.street2">
                                <div>
                                    <span t-field="o.company_id.street2"/>
                                </div>
                            </t>
                            <div>
                                <t t-if="o.company_id.country_id.code != 'SG'">
                                    <span t-field="o.company_id.city"/>,
                                </t>
                                <span t-field="o.company_id.state_id"/>
                                <span t-field="o.company_id.country_id"/>
                                <span>-</span>
                                <span t-field="o.company_id.zip"/>
                            </div>
                            <div>TEL:
                                <span t-field="o.company_id.phone"/>
                            </div>
                            <t t-if="o.company_id.website">
                                <div>URL:
                                    <span t-field="o.company_id.website"/>
                                </div>
                            </t>
                            <t t-if="o.company_id.email">
                                <div>Email:
                                    <span t-field="o.company_id.email"/>
                                </div>
                            </t>
                            <t t-if="o.company_id.company_registry">
                                <div>Company Reg No:
                                    <span t-field="o.company_id.company_registry"/>
                                </div>
                            </t>
                            <t>
                                <div>SST ID:
                                    <span t-field="o.company_id.sst_registration_number"/>
                                </div>
                            </t>
                            <t t-if="o.company_id.country_id.code != 'SG'">
                                <t>
                                    <div>MSIC CODE:
                                        <span t-field="o.company_id.misc_code"/>
                                    </div>
                                </t>
                                <t t-if="o.company_id.business_des">
                                    <div>Business Activity:
                                        <span t-field="o.company_id.business_des"/>
                                    </div>
                                </t>
                            </t>

                        </div>
                    </div>
                    <div class="col-2 text-right" style="font-size: 12px;">
                        <div>Page:
                            <span class="page"/>
                            of
                            <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article o_report_layout_background" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id">
                <t t-raw="0"/>
            </div>


            <div class="footer o_background_footer" style="font-family: Calibri;font-size:12px;">

                <!-- <div > -->

                <!-- </div> -->
                <t t-if="o.company_id.country_id.code != 'SG'">
                    <t t-if="o.company_id.country_id.code != 'SG'">
                        <div style="font-family: Calibri; font-size: 10px;">
                            <div>Classification: 022</div>
                            <div>Details Tax Exemption: Licensed Manufacturing Warehouse (LMW)</div>
                        </div>
                        <table width="100%"
                               style="border-top: 1px solid black;border-bottom: 1px solid black;font-size:10px;height:15px"
                               class="table table-borderless">
                            <tr style="height:5px;">
                                <td width="25%">For Tax Purpose in MYR Only</td>
                                <td width=""></td>
                                <td width="10%"></td>
                                <td width="15%" style="text-align:right;">Net Total (MYR)</td>
                                <td width="" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span t-esc="'%.2f'%(o.get_net_amount_report())"/>
                                </td>
                                <td width="15%" style="text-align:right;">Net Total (
                                    <span t-field="o.currency_id"/>
                                    )
                                </td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span t-esc="'%.2f'%(o.amount_untaxed)"/>
                                </td>
                            </tr>
                            <tr style="height:5px;">
                                <td width="15%">1 MYR =
                                    <span t-field="o.exchange_rate"/>
                                    USD
                                </td>
                                <td width="3.3%"></td>
                                <td width="15%"></td>
                                <td width="15%" style="text-align:right;">Tax Amount</td>
                                <td width="3" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span style="padding-left:3px" t-esc="'%.2f'%(o.amount_tax / o.exchange_rate)"/>
                                </td>
                                <td width="16%" style="text-align:right;">Tax Amount</td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span style="text-align:right;" t-esc="'%.2f'%(o.amount_tax)"/>
                                </td>
                            </tr>
                            <tr style="height:5px">
                                <td width="15%">Conversation Rate =
                                    <span t-field="o.exchange_rate"/>
                                </td>
                                <td width="3.3%"></td>
                                <td width="15%"></td>
                                <td width="15%" style="text-align:right;">Grand Total (MYR)</td>
                                <td width="3%" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span style="padding-left:3px"
                                          t-esc="'%.2f'%((o.amount_tax / o.exchange_rate) + o.get_net_amount_report())"/>
                                </td>
                                <td width="16%" style="text-align:right;">Grand Total (
                                    <span t-field="o.currency_id"/>
                                    )
                                </td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span t-esc="'%.2f'%(o.amount_total)"/>
                                </td>
                            </tr>
                        </table>

                    </t>
                    <div width="100%" style="border-bottom: 1px solid black;font-size=10px;line-height:18px">

                        <tr>
                            <td width="85%">
                                **This is a computer generated document. Signature is not required.**
                                <br/>
                                1.Please remit to Pecko (M) Sdn Bhd, Swift Code: MBBEMYKL,
                                Maybank Islamic Berhad (MYR A/C: 551100316366);
                                Malayan Banking Berhad (USD A/C: 701105010725).
                                Swift Code: RHBBMYKL, RHB Bank Berhad (USD A/C: 60113800001626).
                                <br/>
                                2.Any discrepancy noted herein must be brought to our notice
                                within 7 days in writing from the date of this invoice.
                                <br/>
                                3.Title to this merchandise remains with PECKO (M) SDN BHD until
                                such time as full settlement of all sums due from you to us under
                                this invoice or otherwise is received.
                            </td>
                            <td width="15%">

                                <div style="position:relative;top:40px;">
                                    <t t-if="o.company_id.country_id.code == 'SG'">

                                        <!-- <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo_three)"
                                             style="width:110px;"/> -->
                                        <img t-if="o.company_id.logo_three"
                                             t-att-src="image_data_uri(o.company_id.logo_three)" style="width:110px;"
                                             alt="Logo"/>
                                    </t>
                                </div>
                            </td>
                        </tr>
                    </div>
                </t>
                <table style='width:100%;background:transparent;'>
                    <tr
                            style='background-color: white;background:transparent !important;'>
                        <td>
                        </td>
                    </tr>
                </table>
                <style>
                </style>
                <t t-if="o.company_id.country_id.code == 'SG'">

                    <t t-if="o.company_id.country_id.code == 'SG'">
                        <table width="100%"
                               style="border-top: 1px solid black;border-bottom: 1px solid black;font-size:px;height:15px"
                               class="table table-borderless">
                            <tr style="height:5px;">
                                <td width="25%">For Tax Purpose in SGD Only</td>
                                <td width=""></td>
                                <td width="10%"></td>
                                <td width="15%" style="text-align:right;">Net Total (SGD)</td>
                                <td width="" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span t-esc="'%.2f'%(o.amount_untaxed * o.exchange_rate)"/>
                                </td>
                                <td width="15%" style="text-align:right;">Net Total (
                                    <span t-field="o.currency_id"/>
                                    )
                                </td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span t-esc="'%.2f'%(o.amount_untaxed)"/>
                                </td>
                            </tr>
                            <tr style="height:5px;">
                                <td width="15%">1 USD =
                                    <span t-field="o.exchange_rate"/>
                                    SGD
                                </td>
                                <td width="3.3%"></td>
                                <td width="15%"></td>
                                <td width="15%" style="text-align:right;">Tax Amount</td>
                                <td width="5%" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span style="padding:8px" t-esc="'%.2f'%(o.amount_tax * o.exchange_rate)"/>
                                </td>
                                <td width="15%" style="text-align:right;">Tax Amount</td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span style="text-align:right;" t-esc="'%.2f'%(o.amount_tax)"/>
                                </td>
                            </tr>
                            <tr style="height:5px">
                                <td width="15%">Conversation Rate =
                                    <span t-field="o.exchange_rate"/>SGD
                                </td>
                                <td width="3.3%"></td>
                                <td width="15%"></td>
                                <td width="15%" style="text-align:right;">Grand Total (SGD)</td>
                                <td width="5%" style="text-align:right;">:</td>
                                <td width="15%">
                                    <span t-esc="'%.2f'%((o.amount_tax * o.exchange_rate) + (o.amount_untaxed * o.exchange_rate))"/>
                                </td>
                                <td width="15%" style="text-align:right;">Grand Total (
                                    <span t-field="o.currency_id"/>
                                    )
                                </td>
                                <td width="1%" style="text-align:left;">:</td>
                                <td width="15%" style="text-align:right;">
                                    <span t-esc="'%.2f'%(o.amount_total)"/>
                                </td>
                            </tr>
                        </table>
                    </t>


                    <table width="100%" style="border-bottom: 1px solid black;position:relative;line-height:1.5;"
                           class="table table-borderless">
                        <tr>
                            <td width="85%" t-if="o.company_id.id == 2">
                                **This is a computer generated document. Signature is not required.**
                                <br/>
                                1.Please remit to Pecko Electronics Industries Pte.Ltd, Swift Code: (UOVBSGSG),
                                United Overseas Bank (SGD A/C: 213-307-107-7);
                                United Overseas Bank (USD A/C: 213-900-224-7).
                                <br/>
                                2.Any discrepancy noted herein must be brought to our notice
                                within 7 days in writing from the date of this invoice.
                                <br/>
                                3.Title to this merchandise remains with Pecko Electronics Industries Pte.Ltd until
                                such time as full settlement of all sums due from you to us under
                                this invoice or otherwise is received.

                            </td>
                            <td width="85%" t-if="o.company_id.id == 4">
                                **This is a computer generated document. Signature is not required.**
                                <br/>
                                1.Please remit to All World Shop Pte.Ltd, Swift Code: (UOVBSGSG),
                                United Overseas Bank (SGD A/C: 3783029764);
                                United Overseas Bank (USD A/C: 3789004550).
                                <br/>
                                2.Any discrepancy noted herein must be brought to our notice
                                within 7 days in writing from the date of this invoice.
                                <br/>
                                3.Title to this merchandise remains with All World Shop Pte.Ltd until
                                such time as full settlement of all sums due from you to us under
                                this invoice or otherwise is received.
                            </td>
                            <td width="15%">

                                <div style="position:relative;top:50px;">
                                    <t t-if="o.company_id.country_id.code == 'SG'">

                                        <!-- <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo_three)"
                                             style="width:110px;"/> -->
                                        <img t-if="o.company_id.logo_three"
                                             t-att-src="image_data_uri(o.company_id.logo_three)" style="width:110px;"
                                             alt="Logo"/>
                                    </t>
                                </div>
                            </td>
                        </tr>
                    </table>
                </t>
                <!-- <t t-if="o.company_id.country_id.code == 'SG'">
                            <table width="100%" style="border-bottom:1px solid black;border-top:1px solid black;">
                                <tr>
                                </tr>
                            </table>
                        </t> -->

            </div>
        </template>
        <template id="custom_invoice_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <t t-call="invoice_report.custom_invoice_external_layout_background">
                <t t-raw="0"/>
            </t>
        </template>

        <record id="paperformat_invoice" model="report.paperformat">
            <field name="name">Invoice Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">6</field>
            <field name="margin_right">6</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">49</field>
            <field name="dpi">90</field>
        </record>

        <!-- QWeb Reports -->

        <record id="account_invoice_ppts" model="ir.actions.report">
            <field name="name">Invoice Report</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_report.report_ppts_invoice_custom</field>
            <field name="report_file">invoice_report.report_ppts_invoice_custom</field>
            <field name="paperformat_id" ref="invoice_report.paperformat_invoice"/>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state in ('draft','open','paid')) and ('INV'+(object.name or
                '').replace('/','')+'.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
        </record>
        <record id="proforma_invoice_ppts" model="ir.actions.report">
            <field name="name">Proforma Report</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_report.report_ppts_proforma_invoice_custom</field>
            <field name="report_file">invoice_report.report_ppts_proforma_invoice_custom</field>
            <field name="paperformat_id" ref="invoice_report.paperformat_invoice"/>
            <field name="print_report_name">'PRO_INV_' + (object.name or '').replace('/', '_')</field>
            <field name="attachment">(object.state in ('draft','open','paid')) and ('PRO_INV'+(object.name or
                '').replace('/','')+'.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
        </record>
    </data>
</odoo>
